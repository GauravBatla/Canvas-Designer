{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript"
  ],
  "editor.tabSize": 2,
  "launch": {
    "configurations": [{
        "type": "node",
        "request": "launch",
        "name": "Launch Webpack",
        "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
        "args": [
          "serve", "--config", "./webpack.dev.js", "--host", "0.0.0.0"
       ]
    }]
  }
}